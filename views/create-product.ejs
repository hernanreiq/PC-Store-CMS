<%- include ('partials/head.html') %>
<%- include ('partials/header.html') %>
<main class="text-white">
    <div class="container my-5 container-main p-3 bg-dark">
        <form action="/save-product" method="POST" class="p-3">
            <h2>Create a product</h2>
            <div class="input-group my-3">
                <div class="input-group-prepend">
                    <span class="input-group-text font-weight-bold" id="name-product">Name</span>
                </div>
                <input required name="name-product" type="text" class="form-control" placeholder="Desktop" aria-label="Desktop" aria-describedby="name-product">
            </div>
            <div class="input-group my-3">
                <div class="input-group-prepend">
                    <span class="input-group-text font-weight-bold" id="brand-product">Brand</span>
                </div>
                <input required name="brand-product" type="text" class="form-control" placeholder="Dell Optiplex" aria-label="Dell Optiplex" aria-describedby="brand-product">
            </div>
            <div class="input-group my-3">
                <div class="input-group-prepend">
                    <span class="input-group-text font-weight-bold" id="year-product">Year</span>
                </div>
                <input required name="year-product" type="number" class="form-control" placeholder="2016" aria-label="2016" aria-describedby="year-product">
            </div>
            <div class="input-group my-3">
                <div class="input-group-prepend">
                    <span class="input-group-text font-weight-bold" id="description-product">Description</span>
                </div>
                <input required name="description-product" type="text" class="form-control" placeholder="i5-6500 8GB DDR4" aria-label="i5-6500 8GB DDR4" aria-describedby="description-product">
            </div>
            <div class="input-group my-3">
                <div class="input-group-prepend">
                    <span class="input-group-text font-weight-bold" id="image-product">Image</span>
                </div>
                <input required name="image-product" type="file" class="form-control" placeholder="Image" aria-label="Image" aria-describedby="image-product" accept="image/png, .jpeg, .jpg, image/gif">
            </div>
            <div class="row">
                <div class="col-md-6 my-2">
                    <button class="btn btn-danger btn-main w-100">Clean fields <i class="far fa-trash-alt"></i></button>
                </div>
                <div class="col-md-6 my-2">
                    <button class="btn btn-success btn-main w-100">Create this product <i class="fas fa-plus-circle"></i></button>
                </div>
            </div>
        </form>
    </div>
</main>
<%- include ('partials/final-part.html') %>