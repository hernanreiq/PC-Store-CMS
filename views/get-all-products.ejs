<%- include ('partials/head.html') %>
<%- include ('partials/header.html') %>
<main class="text-white">
    <div class="container my-5 container-main p-3 bg-dark">
        <h2 class="mb-3">These are all stored products</h2>
        <table class="table table-hover bg-light">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Brand</th>
                <th scope="col">year</th>
                <th scope="col">Description</th>
                <th scope="col">See</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < products_length; i++){ %>
              <tr>
                <td><%- products[i].name %></td>
                <td><%- products[i].brand %></td>
                <td><%- products[i].year %></td>
                <td><%- products[i].description %></td>
                <td><a href="/" class="btn btn-main w-100 btn-info"><i class="fas fa-eye"></i></a></td>
                <td><a href="/" class="btn btn-main w-100 btn-primary"><i class="fas fa-edit"></i></a></td>
                <td><a href="/remove-product/<%- products[i]._id%>" class="btn btn-main w-100 btn-danger"><i class="far fa-trash-alt"></i></a></td>
              </tr>
             <% } %>
            </tbody>
        </table>
    </div>
</main>
<%- include ('partials/final-part.html') %>